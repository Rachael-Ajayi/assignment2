<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="fnameTextField">First Name</label>
          <input
            type="text"
            class="form-control"
            id="fnameTextField"
            placeholder="Enter your first name:"
            name="firstname"
            value="<%= book.firstname %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="lnameTextField">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="lnameTextField"
            placeholder="Enter your last name:"
            name="lastname"
            value="<%= book.lastname %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="emailTextField">Email</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter your email:"
            name="email"
            value="<%= book.email %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="numberTextField">Number</label>
          <input
            type="text"
            class="form-control"
            id="numberTextField"
            placeholder="Enter phone number:"
            name="number"
            value="<%= book.number %>"
            required
          />
        </div>

       

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/book-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
